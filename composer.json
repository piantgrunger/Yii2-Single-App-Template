{
    "name": "piantgrunger/Yii2-Single-App-Template",
    "description": "Yii 2 Single AdminLTE Project Template",
    "authors": [
        {
            "name": "Alfian Naufal",
            "email": "piant.grunger@gmail.com"
        }],
    "keywords": ["yii2", "framework", "single", "project template"],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/hscstudio/yii2-app-single/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "https://github.com/hscstudio/yii2-app-single/wiki",
        "source": "https://github.com/hscstudio/yii2-app-single"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.5",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "kartik-v/yii2-nav-x": "*",
        "bower-asset/sweetalert": "1.1.*",
        "dmstr/yii2-adminlte-asset": "2.*",
        "kartik-v/yii2-widget-select2": "*",
        "kartik-v/yii2-grid": "@dev",
        "kartik-v/yii2-mpdf": "@dev",
        "kartik-v/yii2-export": "*",
        "rmrevin/yii2-fontawesome": "~2.17",
        "hscstudio/yii2-mimin": "~1.1.4",
        "kartik-v/yii2-widget-fileinput": "@dev",
        "kartik-v/yii2-datecontrol": "dev-master"
    
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
